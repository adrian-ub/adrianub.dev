---
import type { CollectionEntry } from "astro:content";

import Separator from "@/components/ui/Separator.astro";
import BlogPostPreview from "./PostPreviewCard.astro";

interface Props {
  posts: CollectionEntry<"blog">[];
}

const { posts = [] } = Astro.props;

const [firstPost, twoPost, threePost] = posts;
---

{
  posts.length && (
    <div class="blog-featured-area mx-auto bg-primary-foreground">
      <div class="blog-featured-container container mx-auto grid grid-cols-1 gap-8 px-4 py-4 md:grid-flow-col md:grid-cols-2 md:grid-rows-2 xl:grid-cols-3 xl:py-10 xl:px-10 2xl:px-24 2xl:py-10">
        {firstPost && (
          <BlogPostPreview
            class="blog-article-card col-span-1 md:row-span-2 xl:col-span-2"
            post={firstPost}
            showSummary={true}
            imageLoading="eager"
          />
        )}
        {twoPost && <BlogPostPreview post={twoPost} imageLoading="eager" />}
        {threePost && <BlogPostPreview post={threePost} imageLoading="eager" />}
      </div>
      <Separator />
    </div>
  )
}
